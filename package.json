{
  "name": "waze_travel_time_card",
  "version": "0.1.0",
  "description": "Waze travel time card for Home Assistant Lovelace UI",
  "main": "dist/waze-travel-time-card.js",
  "scripts": {
    "postpublish": "git push --follow-tags",
    "start": "rollup -c --watch",
    "compile": "rollup -c",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "build": "npm run lint && npm run compile"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards"
  ],
  "author": "Yaroslav Harmash <feroxes@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*": "prettier --write"
  },
  "dependencies": {
    "custom-card-helpers": "^1.7.0",
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rollup": "^2.44.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  }
}
